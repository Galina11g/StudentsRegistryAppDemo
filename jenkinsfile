pipeline{
    agent any

    enviorment {
        NODE_VERSIONS = '18.x'
    }
    tools{
        nodejs "${NODE_VERSIONS}"
    }
    stages {
        stage('Checkout'){
            steps{
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                script{
                    sh 'npm install'
                }
                
            }
        }
        stage('Start Application and Run Tests') {
            steps {
                script{
                    sh 'npm start &'
                    sh 'wait-on http://localhost:8090'
                    sh 'npm test'
                }
                
                
            }
        }
        post {
        always {
            echo 'CI Pipeline completed.'
        }
        
    }
    
}